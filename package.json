{
  "name": "baldrick-zest-engine",
  "description": "DECOMMISSIONED: Prefer classic unit tests with AI assistance; see README for migration.",
  "version": "1.0.0",
  "author": {
    "name": "Olivier Huin",
    "url": "https://github.com/olih"
  },
  "keywords": [
    "unit-testing",
    "testing",
    "TDD",
    "assert",
    "expect",
    "snapshot",
    "ESM",
    "decommissioned",
    "deprecated"
  ],
  "license": "MIT",
  "homepage": "https://github.com/flarebyte/baldrick-zest-engine",
  "repository": {
    "type": "git",
    "url": "https://github.com/flarebyte/baldrick-zest-engine.git"
  },
  "bugs": "https://github.com/flarebyte/baldrick-zest-engine/issues",
  "type": "module",
  "types": "./dist/src/index.d.mts",
  "exports": {
    ".": {
      "import": "./dist/src/index.mjs",
      "default": "./dist/src/index.mjs",
      "types": "./dist/src"
    },
    "./package.json": {
      "default": "./package.json"
    }
  },
  "main": "./dist/src/index.mjs",
  "files": [
    "dist/src",
    "src"
  ],
  "bin": {},
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "rm -rf dist && tsc --outDir dist",
    "test": "node --test --loader ts-node/esm test/*.test.ts",
    "spec": "node --loader ts-node/esm .baldrick-zest.ts"
  },
  "dependencies": {
    "chalk": "^5.2.0",
    "jest-diff": "^29.4.3",
    "yaml": "^2.2.1",
    "zod": "^3.20.6"
  },
  "devDependencies": {
    "baldrick-dev-ts": "^0.17.0",
    "baldrick-zest-mess": "^0.17.0",
    "object-crumble": "^0.6.6",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "zod-to-json-schema": "^3.20.4"
  },
  "peerDependencies": {}
}
